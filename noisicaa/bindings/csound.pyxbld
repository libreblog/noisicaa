# -*- mode: python -*-

import os
import os.path

def make_ext(modname, pyxfilename):
    from distutils.extension import Extension
    return Extension(
        name = modname,
        sources=[pyxfilename],
        libraries=['csound64'],
        library_dirs=[os.path.join(os.getenv('VIRTUAL_ENV'), 'lib')],
        include_dirs=[os.path.join(os.getenv('VIRTUAL_ENV'), 'include')],
    )
